[user]
	name = andrey-abramow
	email = abramow.andrey@gmail.com
[core]
	autocrlf = input
	excludesfile = $HOME/.gitignore
	editor = /usr/bin/vim
[url "https://github"]
	insteadOf = git://github
	
[alias]
    co = checkout
    c = commit -m
    a = add .
    rs = reset --soft HEAD~1
    st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p

[push]
	default = simple
